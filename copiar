validate_string() {
  local str="$1"

  # Check if string is empty or longer than 32 characters
  if [ -z "$str" ] || [ "${#str}" -gt 32 ]; then
    echo "Invalid: String must be between 1 and 32 characters."
    return 1
  fi

  # Check if string starts or ends with a hyphen
  if [[ "$str" == -* || "$str" == *- ]]; then
    echo "Invalid: String must not start or end with a hyphen."
    return 1
  fi

  # Check if string contains only lowercase alphanumeric characters and single hyphens
  if ! [[ "$str" =~ ^[a-z0-9]+(-[a-z0-9]+)*$ ]]; then
    echo "Invalid: String must contain only lowercase alphanumeric characters and single hyphens."
    return 1
  fi

  echo "Valid string"
  return 0
}
